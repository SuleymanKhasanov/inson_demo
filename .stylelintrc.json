{
	"extends": ["stylelint-config-standard", "stylelint-config-css-modules"],
	"ignoreFiles": ["coverage/**/*.css", "build/**/*.css", "src/shared/styles/normalize.css"],
	"plugins": ["stylelint-order", "stylelint-declaration-strict-value"],
	"rules": {
		"scale-unlimited/declaration-strict-value": [
			["color", "background-color", "font-size", "font-weight", "font-family", "filter"],
			{
				"ignoreValues": ["currentColor", "unset", "inherit", "initial", "transparent"]
			}
		],
		"order/properties-order": [
			"all",
			"position",
			"top",
			"right",
			"bottom",
			"left",
			"z-index",
			"display",
			"grid",
			"grid-template",
			"grid-template-rows",
			"grid-template-columns",
			"grid-template-areas",
			"grid-auto-rows",
			"grid-auto-columns",
			"grid-auto-flow",
			"grid-area",
			"grid-row",
			"grid-row-start",
			"grid-row-end",
			"grid-column",
			"grid-column-start",
			"grid-column-end",
			"align-items",
			"align-content",
			"justify-items",
			"justify-content",
			"gap",
			"row-gap",
			"column-gap",
			"order",
			"flex",
			"flex-grow",
			"flex-shrink",
			"flex-basis",
			"width",
			"min-width",
			"max-width",
			"height",
			"min-height",
			"max-height",
			"padding",
			"margin",
			"border",
			"border-radius",
			"background",
			"background-color",
			"background-image",
			"box-shadow",
			"color",
			"font",
			"font-size",
			"font-weight",
			"font-family",
			"line-height",
			"text-align",
			"text-decoration",
			"opacity",
			"visibility",
			"animation",
			"transform",
			"transition"
		]
	}
}
